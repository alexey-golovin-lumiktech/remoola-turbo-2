# ============================================
# Remoola API - Environment Variables
# ============================================

# Application Environment
NODE_ENV=development
PORT=3333

# Database Configuration
DATABASE_URL=postgresql://wirebill:wirebill@127.0.0.1:5433/wirebill
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5433
POSTGRES_USER=wirebill
POSTGRES_PASSWORD=wirebill
POSTGRES_DB=wirebill
POSTGRES_SSL=false
POSTGRES_TIMEZONE=UTC

# JWT Configuration (fintech-safe: short access, limited refresh)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ACCESS_SECRET=your-access-token-secret
JWT_REFRESH_SECRET=your-refresh-token-secret
# Access/refresh expiry: <n>s|m|h|d (e.g. 15m, 168h). Defaults: 15m, 168h (7d)
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=168h

# Admin Default Credentials (for seeding)
DEFAULT_ADMIN_EMAIL=regular.admin@wirebill.com
DEFAULT_ADMIN_PASSWORD=RegularWirebill@Admin123!
SUPER_ADMIN_EMAIL=super.admin@wirebill.com
SUPER_ADMIN_PASSWORD=SuperWirebill@Admin123!

# Auth lockout (fintech-safe: per-email rate limit + lockout after N failures)
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_LOCKOUT_DURATION_MINUTES=15
AUTH_PER_EMAIL_RATE_LIMIT=10
AUTH_PER_EMAIL_RATE_WINDOW_MINUTES=15

# Security & Cookies
SECURE_SESSION_SECRET=your-secure-session-secret-here
COOKIE_SECURE=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3010,http://localhost:3001,https://remoola-turbo-2-admin.vercel.app,https://remoola-turbo-2-consumer.vercel.app,https://remoola-turbo-2-api.vercel.app

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET=your-s3-bucket-name
AWS_FILE_UPLOAD_MAX_SIZE_BYTES=50000000
S3_BUCKET=your-s3-bucket-name
S3_PUBLIC_BASE=https://your-s3-bucket-name.s3.amazonaws.com

# Google OAuth & APIs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_WEBHOOK_SECRET_BILLING=whsec_your-stripe-billing-webhook-secret

# Email Configuration (Nodemailer)
NODEMAILER_SMTP_HOST=smtp.gmail.com
NODEMAILER_SMTP_PORT=587
NODEMAILER_SMTP_USER=your-email@gmail.com
NODEMAILER_SMTP_USER_PASS=your-app-password
NODEMAILER_SMTP_DEFAULT_FROM=noreply@wirebill.com

# Admin Configuration
ADMIN_EMAIL=regular.admin@wirebill.com

# External Services
NEST_APP_EXTERNAL_ORIGIN=http://localhost:3333/api
CONSUMER_APP_ORIGIN=http://localhost:3001
ADMIN_APP_ORIGIN=http://localhost:3010

# Ngrok Configuration (for development)
NGROK_AUTH_TOKEN=your-ngrok-auth-token
NGROK_DOMAIN=your-ngrok-domain.ngrok-free.app

# Vercel Deployment
VERCEL=0
VERCEL_URL=https://your-app.vercel.app

# AI/OpenAI (Optional)
OPENAI_API_KEY=your-openai-api-key

# Development & Monitoring
TURBO_TELEMETRY_DISABLED=1
DO_NOT_TRACK=1
