{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    "noStrictGenericChecks": false,
    "baseUrl": "./",
    "paths": {
      "@wirebill/shared-common": [
        "src/shared-common"
      ],
      "@wirebill/shared-common/*": [
        "src/shared-common/*"
      ],
      "@wirebill/pdf-generator-package": [
        "src/shared-common/pdf-generator-package"
      ],
      "@wirebill/pdf-generator-package/*": [
        "src/shared-common/pdf-generator-package/*"
      ]
    }
  },
  "include": [
    "src",
    "typings",
    "knexfile.ts",
    "test"
  ]
}