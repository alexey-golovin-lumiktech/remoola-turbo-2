{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "isolatedModules": false
      }
    ]
  },
  "slowTestThreshold": 20,
  "bail": 1,
  "logHeapUsage": true,
  "passWithNoTests": true,
  "detectOpenHandles": true,
  "moduleNameMapper": {
    "@wirebill/shared-common/(.*)": "<rootDir>/src/shared-common/$1",
    "@wirebill/shared-common": "<rootDir>/src/shared-common",
    "@wirebill/pdf-generator-package/(.*)": "<rootDir>/src/shared-common/pdf-generator-package/$1",
    "@wirebill/pdf-generator-package": "<rootDir>/src/shared-common/pdf-generator-package"
  }
}