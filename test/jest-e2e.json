{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "slowTestThreshold": 20,
  "bail": 1,
  "logHeapUsage": true,
  "passWithNoTests": true,
  "detectOpenHandles": true
}