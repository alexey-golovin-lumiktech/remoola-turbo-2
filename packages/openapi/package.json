{
  "name": "@remoola/openapi",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "openapi:pull": "./scripts/resolve-openapi.sh",
    "openapi:gen": "if [ -f src/openapi.json ]; then openapi --input src/openapi.json --output src/generated --client fetch --useOptions --useUnionTypes; else echo '⚠️  Skipping generation (no openapi.json)'; fi",
    "openapi:gen:types": "openapi-typescript src/openapi.json --output src/generated-types.ts",
    "openapi": "yarn openapi:pull && yarn openapi:gen",
    "clean": "rimraf node_modules dist src/generated src/openapi.json",
    "build": "yarn run openapi && if [ -n \"$(find src -name '*.ts' -print -quit)\" ]; then tsc -p tsconfig.json; else echo '⚠️  Skipping TS build (no TypeScript sources)'; fi"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "@remoola/api": "0.0.0",
    "@nestjs/mapped-types": "*"
  },
  "devDependencies": {
    "openapi-typescript": "^7.10.1",
    "openapi-typescript-codegen": "^0.29.0",
    "rimraf": "^5.0.5",
    "@remoola/eslint-config": "^0.0.0",
    "@remoola/typescript-config": "^0.0.0",
    "@types/node": "^22.10.7",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.8.2"
  }
}
